{% if channel.hasPublish() -%}
import com.solacesystems.jcsmp.JCSMPStreamingPublishEventHandler;
{% endif -%}
{%- if queueInfo.needQueue %}
import com.solacesystems.jcsmp.Queue;
{% endif -%}
import com.solacesystems.jcsmp.TextMessage;
